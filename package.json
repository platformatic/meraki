{
  "name": "meraki",
  "private": true,
  "version": "0.9.0",
  "main": "./out/main/index.js",
  "author": "Platformatic.dev",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformatic/meraki.git"
  },
  "scripts": {
    "lint": "standard . | snazzy",
    "start": "electron-vite preview",
    "fix-electron-deps": "electron-rebuild -f -w better-sqlite3",
    "fix-node-deps": "npm rebuild better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "dev": "electron-vite dev --watch",
    "build": "electron-vite build",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "test:main": "standard | snazzy && vitest ./test/main --no-threads",
    "test:renderer": "standard | snazzy && vitest ./test/renderer --no-threads",
    "test": "npm run test:main && npm run test:renderer",
    "clean": "rimraf ./out && rimraf ./dist && rimraf ./coverage",
    "release:win": "electron-builder -p always --win --config",
    "release:linux": "electron-builder -p always --linux --config",
    "release:mac": "electron-builder -p always --mac --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@fastify/error": "^3.4.1",
    "@platformatic/client": "^1.20.2",
    "@platformatic/ui-components": "^0.2.6",
    "@platformatic/sql-mapper": "^1.23.0",
    "autoprefixer": "^10.4.16",
    "boring-name-generator": "^1.0.3",
    "change-case-all": "^2.1.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "execa": "^5.1.1",
    "mkdirp": "^3.0.1",
    "postgrator": "^7.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-transition-group": "^4.4.5",
    "split2": "^4.2.0",
    "tailwindcss": "^3.3.6",
    "undici": "^6.0.1",
    "use-error-boundary": "^2.0.6",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "28.2.4",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "fastify": "^4.24.3",
    "glob": "^10.3.10",
    "happy-dom": "^13.0.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "snazzy": "^9.0.0",
    "standard": "^17.1.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.6"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  }
}
